<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imagefood"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTips4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="OVERVIEW"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textbenefit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="One factor that may contribute to depression is a personâ€™s dietary habits. The researchers concluded that people could help manage or improve their symptoms of depression by addressing their diet." />



        <TextView android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="HOW FOOD CAN AFFECT OUR MOOD"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/textTips3"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="\u2022 Your diet quality could affect your mood and increase your risk of depressive symptoms."
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textTips1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="\u2022 Your personal, cultural, religious and economic meaning of foods can influence how you feel when you eat them."
            android:textAlignment="center"
            android:textSize="15dp" />


        <TextView android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="EATING TO IMPROVE YOUR MOOD"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imagesleep"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/clock" />

        <TextView
            android:id="@+id/textbenefit3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Eat regularly to provide regular supply of energy to your brain"
            android:gravity="center"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageenergy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/law" />

        <TextView
            android:id="@+id/textbenefit2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="A balanced plate is split into 1/2 veg, 1/4 carbs, 1/4 protein"
            android:gravity="center"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageselflove"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/water" />


        <TextView
            android:id="@+id/textbenefit1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Dehydration can affect mood. Aim for 6-8 glasses per day"
            android:textSize="15dp"
            android:layout_marginBottom="60dp"/>
    </LinearLayout>
</ScrollView>